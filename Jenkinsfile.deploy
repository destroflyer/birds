pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        skipDefaultCheckout()
        ansiColor('xterm')
    }
    parameters {
        string(name: 'VERSION', defaultValue: 'master')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'git checkout $VERSION'
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'destrostudios/maven-java-22'
                    reuseNode true
                }
            }
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Deploy') {
            environment {
                CLIENT = '/var/destrostudios/apps/Birds'
            }
            steps {
                sh 'rm -rf "$CLIENT"'
                sh 'mkdir "$CLIENT"'
                sh 'mv target/libs "$CLIENT"'
                sh 'mv target/birds-0.0.1.jar "$CLIENT/Birds.jar"'
                sh 'mv assets "$CLIENT"'
                sh 'curl -X POST https://destrostudios.com:8080/apps/3/updateFiles'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}